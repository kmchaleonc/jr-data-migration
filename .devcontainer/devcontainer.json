{
  "name": "SQL Interview Environment",
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "customizations": {
    "vscode": {
      "extensions": [
        "alexcvzz.vscode-sqlite",
        "ms-python.python"
      ],
      "settings": {
        "sqlite.databaseExtensions": ["db", "sqlite", "sqlite3"],
        "sqlite.logLevel": "INFO"
      }
    }
  },
  "postCreateCommand": "chmod +x setup.sh && ./setup.sh",
  "remoteUser": "vscode"
}