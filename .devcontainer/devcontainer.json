{
  "name": "SQL Interview Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/warrenbuckley/codespace-features/sqlite:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "mtxr.sqltools",
        "mtxr.sqltools-driver-sqlite",
        "ms-python.python"
      ],
      "settings": {
        "sqltools.useNodeRuntime": true,
        "sqltools.disableNodeDetectNotifications": true,
        "sqltools.autoOpenSessionFiles": false,
        "sqltools.results.location": "current",
        "sqltools.results.reuseTabs": "connection",
        "sqltools.connections": [
          {
            "name": "Interview DB",
            "driver": "SQLite",
            "database": "${workspaceFolder}/database/healthcare.db",
            "previewLimit": 50
          }
        ]
      }
    }
  },
  "postCreateCommand": "cd ~/.vscode-server/extensions/mtxr.sqltools-driver-sqlite-* && npm install sqlite3@5.1.7 && cd ${CODESPACE_VSCODE_FOLDER} && cd database && sqlite3 healthcare.db < init.sql && echo 'Database initialized successfully!'",
  "remoteUser": "vscode"
}